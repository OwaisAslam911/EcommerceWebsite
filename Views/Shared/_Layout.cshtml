<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcommerceWebsite.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="header">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark fs-5 ">
            <div class="container">
                <a class="navbar-brand" href="#"><img src="assets/logo.png" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="cont">

                        <div class="col-lg-8 col-8 text-left search-div">
                            <form action="">
                                <div class="input-group">
                                    <input type="text" class="form-control"
                                           aria-label="Dollar amount (with dot and two decimal places)">
                                    <span class="input-group-text"><i class="fa fa-search"></i></span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <ul class="navbar-nav  ms-auto">
                        <!-- <li class="nav-item">
                          <a class="nav-link active" aria-current="page" href="#"><span><i class="fa-solid fa-house"></i></span>
                            Home</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span><i class="fa-regular fa-user"></i></span>Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span><i class="fa-solid fa-shop"></i></span>Become A Seller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span><i class="fa-solid fa-cart-shopping"></i></span>Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span><i class="fa-solid fa-ellipsis-vertical"></i></span></a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EcommerceWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
